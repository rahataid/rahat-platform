meta {
  name: password-reset
  type: http
  seq: 8
}

post {
  url: {{url}}/auth/password/reset
  body: json
  auth: none
}

body:json {
  {
    "email": "user@example.com",
    "service": "EMAIL"
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
}

tests {
  test('should send password reset request', async () => {
    const responseData = res.getBody();
    expect(responseData).to.have.property('success');
    expect(responseData.success).to.be.true;
  });
}
