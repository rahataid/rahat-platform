{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rahat/stats": ["libs/stats/src/index.ts"],
      "@rahataid/contracts": ["libs/contracts/src/index.ts"],
      "@rahataid/extensions": ["libs/extensions/src/index.ts"],
      "@rahataid/extensions/*": ["libs/extensions/src/*"],
      "@rahataid/queues/rabbitmq": ["libs/rabbitmq/src/index.ts"],
      "@rahataid/sdk": ["libs/sdk/src/index.ts"],
      "@rahataid/sdk/*": ["libs/sdk/src/*"],
      "@rahataid/subgraph": ["libs/subgraph/src/index.ts"]
    },
    "types": ["node", "tslib"]
  },
  "exclude": ["node_modules", "tmp"]
}
